<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/cluster_image" android:layout_height="@dimen/cluster_image">

    <ImageView
        android:id="@+id/cluster_image"
        android:layout_width="@dimen/cluster_image"
        android:layout_height="@dimen/cluster_image"/>

    <TextView
        android:id="@id/amu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/amu_Bubble.TextAppearance.Light"
        android:background="@android:color/black"
        android:paddingLeft="@dimen/cluster_padding"
        android:paddingRight="@dimen/cluster_padding"
        android:layout_gravity="center"
        android:alpha =".8"/>


</FrameLayout>